{
    "manifest_version": 3,
    "name": "MS Rewards Assistant",
    "version": "1.0.1",
    "description": "Automatically search a list of queries on Bing to earn Rewards points",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "tabs"
    ]
}